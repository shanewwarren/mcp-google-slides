{
  "name": "mcp-google-slides",
  "version": "0.1.0",
  "description": "MCP server for creating and managing Google Slides presentations with zero-config OAuth authentication",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "bunx --bun biome check .",
    "lint:fix": "bunx --bun biome check --write .",
    "format": "bunx --bun biome format --write .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "google-slides",
    "presentations",
    "oauth"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "googleapis": "^144.0.0",
    "google-auth-library": "^9.15.0",
    "open": "^10.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "^1.3.6",
    "@types/node": "^22.10.5",
    "typescript": "^5.7.2"
  }
}
